interface SoftSPI{

  /********************************************
   * values are read/written on rising edge   *
   * see SoftSPI.h for pin/port configuration *
   ********************************************/
  
  /* send one Byte */
  inline async command void sendByte( uint8_t msg );

  /* receive one Byte */
  inline async command void receiveByte( uint8_t *data );
  
}
